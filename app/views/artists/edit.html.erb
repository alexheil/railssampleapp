<% provide(:title, @artist.artist_name) %>
<h1>Update your profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@artist, :html => { :multipart => true }) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :genre %>
      <%= f.select(:genre, options_for_select(music_genres)) %>

      <%= f.label :location %>
      <%= f.text_field :location, class: 'form-control' %>

      <%= f.label :sounds_like %>
      <%= f.text_field :sounds_like, class: 'form-control' %>

      <%= f.label :biography %>
      <%= f.text_area :biography, class: 'form-control'%>

      <%= f.label :cover_img %>
      <%= f.file_field :cover_img, class: 'form-control' %>

      <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
