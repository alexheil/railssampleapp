<% provide(:title, @artist.artist_name) %>
<div class="row">
    <aside class="col-md-4">
      <section class="artist_info">
        <%= render 'shared/artist_info' %>
      </section>
      <% if current_artist == @artist %>
      <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
      </section>
      <% end %>
    </aside>
    <% if @artist.microposts.any? %>
    <div class="col-md-4">
      <h3>Microposts (<%= @artist.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    </div>
    <% end %>
    <div class="col-md-10">
        <%= image_tag @artist.cover_img.url(:cover) %>
    </div>
  </div>
