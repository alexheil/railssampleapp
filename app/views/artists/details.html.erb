<% provide(:title, @artist.artist_name) %>
<h1>Give your fans some details</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@artist) do |f| %>

      <%= f.label :genre %>
      <%= f.select(:genre, options_for_select(music_genres)) %>

      <%= f.label :location %>
      <%= f.text_field :location, class: 'form-control' %>

      <%= f.label :sounds_like %>
      <%= f.text_field :sounds_like, class: 'form-control' %>

      <%= f.label :biography %>
      <%= f.text_area :biography, class: 'form-control'%>

      <%= f.submit "Finish", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
