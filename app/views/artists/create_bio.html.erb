<% provide(:title, @artist.artist_name) %>
<h1>Create a bio</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@artist) do |f| %>

      <%= f.label :genre %>
      <%= f.select(:genre, options_for_select(music_genres)) %>

      <%= f.label :location %>
      <%= f.text_field :location, class: 'form-control' %>

      <%= f.label :sounds_like %>
      <%= f.text_field :sounds_like, class: 'form-control' %>

      <%= f.label :biography %>
      <%= f.text_area :biography, class: 'form-control'%>

      <%= f.label :cover_img, "cover image" %><br />
      <%= f.file_field :cover_img %>

      <div class="col-md-6">
        <%= f.submit "Finish", class: "btn btn-primary" %>
        <%= link_to "skip", current_artist, class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
